{
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-env --unstable-kv server.ts",
    "poll": "deno run --allow-net --allow-env --allow-ffi --allow-read poller.ts",
    "deploy": "deployctl deploy --project=tauon-now-playing server.ts",
    "check": "deno check server.ts poller.ts svg.ts types.ts",
    "fmt": "deno fmt"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "sharp": "npm:sharp@^0.33.5"
  },
  "unstable": ["kv"],
  "nodeModulesDir": "auto"
}
